generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model Campaign {
  id           String   @id @default(uuid())
  subject      String
  body         String
  startTime    DateTime
  delaySeconds Int
  hourlyLimit  Int
  status       String
  emails       Email[]
  createdAt    DateTime @default(now())
}

model Email {
  id          String   @id @default(uuid())
  campaignId  String
  recipient   String
  scheduledAt DateTime
  sentAt      DateTime?
  status      String
  error       String?
  jobId       String   @unique
  createdAt   DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id])
}
